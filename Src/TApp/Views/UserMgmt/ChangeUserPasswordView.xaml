<UserControl
    x:Class="TApp.Views.UserMgmt.ChangeUserPasswordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:local="clr-namespace:TApp.Views.UserMgmt"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.Resources>
                <Style BasedOn="{StaticResource MaterialDesignLabel}" TargetType="Label">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Margin" Value="80,0,0,0" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Margin" Value="80,0,0,0" />
                    <Setter Property="Width" Value="300" />
                    <Setter Property="FontSize" Value="24" />
                </Style>

                <Style BasedOn="{StaticResource MaterialDesignPasswordBox}" TargetType="PasswordBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Margin" Value="80,0,0,0" />
                    <Setter Property="Width" Value="300" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>


            <Label
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="{Binding [当前账号], Source={x:Static lang:LanguageManager.Instance}}" />
            <TextBox
                x:Name="txtAccount"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                IsEnabled="False" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="{Binding [当前密码], Source={x:Static lang:LanguageManager.Instance}}" />
            <PasswordBox
                Name="OldPassword"
                Grid.Row="1"
                Grid.Column="1"
                md:TextFieldAssist.HasClearButton="True" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="{Binding [新密码], Source={x:Static lang:LanguageManager.Instance}}" />
            <PasswordBox
                Name="NewPassword"
                Grid.Row="2"
                Grid.Column="1"
                md:TextFieldAssist.HasClearButton="True" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="{Binding [新密码(二次输入)], Source={x:Static lang:LanguageManager.Instance}}" />
            <PasswordBox
                Name="Confirm"
                Grid.Row="3"
                Grid.Column="1"
                md:TextFieldAssist.HasClearButton="True" />
        </Grid>

        <Button
            x:Name="btnResetForm"
            Grid.Row="1"
            Grid.Column="0"
            Width="200"
            Height="50"
            Margin="40,10,40,10"
            HorizontalAlignment="Left"
            Background="{StaticResource MaterialDesignLightForeground}"
            Content="{Binding [重置表单], Source={x:Static lang:LanguageManager.Instance}}"
            FontSize="24" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="50"
            Margin="40,10,40,10"
            Click="BtnClick_ChangeUserPassword"
            Content="{Binding [修改密码], Source={x:Static lang:LanguageManager.Instance}}"
            FontSize="24" />
    </Grid>
</UserControl>
