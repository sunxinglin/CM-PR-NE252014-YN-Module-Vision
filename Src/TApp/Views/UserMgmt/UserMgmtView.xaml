<UserControl
    x:Class="TApp.Views.UserMgmt.UserMgmtView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:collection="clr-namespace:System.Collections.Generic;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:reactiveui="http://reactiveui.net"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:usermgmt="clr-namespace:TApp.Views.UserMgmt"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Top"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">

    <UserControl.Resources />

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="16"
            md:ColorZoneAssist.Background="Black"
            md:ColorZoneAssist.Foreground="White"
            md:ColorZoneAssist.Mode="Custom"
            Style="{DynamicResource MaterialDesignGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon
                            Width="40"
                            Height="40"
                            VerticalAlignment="Center"
                            Kind="TelevisionGuide" />
                        <TextBlock
                            Margin="8,0,0,0"
                            FontSize="28"
                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                            Text="{Binding [用户操作], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <GroupBox.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="20px" />
                    <Setter Property="FontFamily" Value="NSimSun" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Width" Value="120" />
                </Style>

                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="20px" />
                    <Setter Property="FontFamily" Value="NSimSun" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </GroupBox.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Height="50"
                    Margin="40,10,40,10"
                    Background="Salmon"
                    Click="BtnClick_SwitchUser"
                    Content="{Binding [切换用户], Source={x:Static lang:LanguageManager.Instance}}" />
                <Button
                    Name="btnSwitchToOperator"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="50"
                    Margin="40,10,40,10"
                    Background="OldLace"
                    Content="{Binding [注销(切换成操作员)], Source={x:Static lang:LanguageManager.Instance}}" />
            </Grid>
        </GroupBox>

        <TabControl
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="16,0,16,10"
            TabStripPlacement="Top">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Margin="10,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsEnabled" Value="True" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Panel" Property="Background" Value="White" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsEnabled" Value="False" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter Property="Foreground" Value="Gray" />
                                            <Setter TargetName="Panel" Property="Background" Value="White" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!--  修改密码  -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Width="200"
                        Height="50"
                        Orientation="Horizontal">
                        <md:PackIcon
                            Width="40"
                            Height="50"
                            VerticalAlignment="Center"
                            Kind="PasswordReset" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="{Binding [修改密码], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </TabItem.Header>
                <usermgmt:ChangeUserPasswordView x:Name="viewChangeUserPass" />
            </TabItem>

            <!--  创建用户  -->
            <TabItem x:Name="tabCreateUser">
                <TabItem.Header>
                    <StackPanel
                        Width="200"
                        Height="50"
                        Orientation="Horizontal">
                        <md:PackIcon
                            Width="40"
                            Height="50"
                            VerticalAlignment="Center"
                            Kind="UserAdd" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="{Binding [创建用户], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </TabItem.Header>
                <usermgmt:CreateUserView x:Name="viewCreateUser" />
            </TabItem>

            <!--  管理权限  -->
            <TabItem x:Name="tabClaimsMgmt">
                <TabItem.Header>
                    <StackPanel
                        Width="200"
                        Height="50"
                        Orientation="Horizontal">
                        <md:PackIcon
                            Width="40"
                            Height="50"
                            VerticalAlignment="Center"
                            Kind="ZodiacVirgo" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="{Binding [管理权限], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </TabItem.Header>

                <usermgmt:PrivilegeMgmtView x:Name="viewPrivilegeMgmt" />
            </TabItem>


            <!--  用户管理  -->
            <TabItem x:Name="tabInspectUsers">
                <TabItem.Header>
                    <StackPanel
                        Width="200"
                        Height="50"
                        Orientation="Horizontal">
                        <md:PackIcon
                            Width="40"
                            Height="50"
                            VerticalAlignment="Center"
                            Kind="UserLock" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="{Binding [系统用户], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </TabItem.Header>
                <usermgmt:UserListView x:Name="viewInspectUsers" />
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
