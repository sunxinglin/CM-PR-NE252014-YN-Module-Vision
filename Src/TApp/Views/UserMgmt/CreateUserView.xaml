<UserControl
    x:Class="TApp.Views.UserMgmt.CreateUserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:local="clr-namespace:TApp.Views.UserMgmt"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style BasedOn="{StaticResource MaterialDesignLabel}" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="80,0,0,0" />
                <Setter Property="FontSize" Value="24" />
            </Style>
            <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="TextBox">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="80,0,0,0" />
                <Setter Property="Width" Value="300" />
                <Setter Property="FontSize" Value="24" />
            </Style>

            <Style BasedOn="{StaticResource MaterialDesignPasswordBox}" TargetType="PasswordBox">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="80,0,0,0" />
                <Setter Property="Width" Value="300" />
                <Setter Property="FontSize" Value="24" />
            </Style>

            <Style BasedOn="{StaticResource MaterialDesignComboBox}" TargetType="ComboBox">
                <Setter Property="Width" Value="300" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="80,0,0,0" />
                <Setter Property="FontSize" Value="24" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190.5" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="{Binding [账号名], Source={x:Static lang:LanguageManager.Instance}}"
                FontSize="24" />
            <TextBox
                x:Name="txtAccount"
                Grid.Row="0"
                Grid.Column="1" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="{Binding [密码], Source={x:Static lang:LanguageManager.Instance}}" />
            <PasswordBox
                x:Name="CreatePassword"
                Grid.Row="1"
                Grid.Column="1"
                md:TextFieldAssist.HasClearButton="True" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="{Binding [密码(二次确认)], Source={x:Static lang:LanguageManager.Instance}}" />
            <PasswordBox
                Name="CreatePassword2"
                Grid.Row="2"
                Grid.Column="1"
                md:TextFieldAssist.HasClearButton="True" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="{Binding [姓名], Source={x:Static lang:LanguageManager.Instance}}" />
            <TextBox
                x:Name="txtName"
                Grid.Row="3"
                Grid.Column="1" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="{Binding [工卡], Source={x:Static lang:LanguageManager.Instance}}" />
            <TextBox
                x:Name="txtCardNo"
                Grid.Row="4"
                Grid.Column="1" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Content="{Binding [角色], Source={x:Static lang:LanguageManager.Instance}}" />
            <ComboBox
                x:Name="cboxRole"
                Grid.Row="5"
                Grid.Column="1"
                VerticalAlignment="Center"
                DisplayMemberPath="." />

        </Grid>

        <Button
            x:Name="btnResetForm"
            Grid.Row="1"
            Grid.Column="0"
            Width="200"
            Height="50"
            Margin="40,10,40,10"
            HorizontalAlignment="Center"
            Background="{StaticResource MaterialDesignLightForeground}"
            Content="{Binding [重置表单], Source={x:Static lang:LanguageManager.Instance}}"
            FontSize="24" />
        <Button
            x:Name="btnCreateUser"
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="50"
            Margin="40,10,40,10"
            HorizontalAlignment="Center"
            Click="btnCreateUser_Click"
            Content="{Binding [创建用户], Source={x:Static lang:LanguageManager.Instance}}"
            FontSize="24" />
    </Grid>
</UserControl>
