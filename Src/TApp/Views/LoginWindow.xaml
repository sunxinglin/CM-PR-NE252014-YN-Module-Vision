<Window
    x:Class="TApp.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="400"
    Closing="Window_Closing"
    FontFamily="Segoe UI Emoji"
    MouseLeftButtonDown="MoveWindow_MouseLeftButtonDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderThickness="1,1,1,1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="Black" />
                <GradientStop Offset="1" Color="#FF796EE6" />
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="240" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Rectangle
                Grid.Row="0"
                Height="280"
                VerticalAlignment="Top">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF2281D1" />
                        <GradientStop Offset="1" Color="#FF34268A" />
                        <GradientStop Offset="0.546" Color="#FF33288B" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Grid
                Width="350"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Viewbox
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Image Source="/Resources/Logo/logo-bar_white.png" />
                </Viewbox>
                <TextBlock
                    Name="appName"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Gainsboro"
                    Style="{StaticResource MaterialDesignHeadline3TextBlock}" />
            </Grid>


            <Grid Grid.Row="1">
                <TabControl
                    materialDesign:ColorZoneAssist.Mode="Standard"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    Style="{StaticResource MaterialDesignNavigatilRailTabControl}">
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="40"
                                    Height="50"
                                    HorizontalAlignment="Center"
                                    Kind="BarcodeScan" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding [刷卡登录], Source={x:Static lang:LanguageManager.Instance}}" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid FocusManager.FocusedElement="{Binding ElementName=CardNo}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="80" />
                                <RowDefinition Height="70" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <PasswordBox
                                Name="CardNo"
                                Grid.Row="1"
                                Grid.Column="1"
                                materialDesign:HintAssist.FloatingScale="0.80"
                                materialDesign:HintAssist.Hint="CATL ID CARD"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                                FontSize="24"
                                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                                <PasswordBox.InputBindings>
                                    <KeyBinding Key="Enter" CommandParameter="{Binding ElementName=CardNo}" />
                                </PasswordBox.InputBindings>
                            </PasswordBox>

                            <Label
                                Name="LoginByCardLabel"
                                Grid.Row="1"
                                Grid.Column="1"
                                Content="{Binding [请刷卡登录], Source={x:Static lang:LanguageManager.Instance}}"
                                FontSize="48"
                                Visibility="Hidden" />
                        </Grid>
                    </TabItem>
                    <TabItem Name="loginByPasswordTab">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="40"
                                    Height="50"
                                    HorizontalAlignment="Center"
                                    Kind="Keyboard" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding [密码登录], Source={x:Static lang:LanguageManager.Instance}}" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid FocusManager.FocusedElement="{Binding ElementName=pswdbox}">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Width="50"
                                Height="60"
                                VerticalAlignment="Center"
                                Kind="Account" />
                            <TextBox
                                x:Name="Account"
                                Grid.Row="0"
                                Grid.Column="2"
                                materialDesign:HintAssist.Foreground="Green"
                                materialDesign:HintAssist.Hint="{Binding [账号], Source={x:Static lang:LanguageManager.Instance}}"
                                materialDesign:TextFieldAssist.UnderlineBrush="Coral"
                                FontSize="20"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <materialDesign:PackIcon
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="50"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Kind="Lock" />

                            <PasswordBox
                                x:Name="pswdbox"
                                Grid.Row="1"
                                Grid.Column="2"
                                materialDesign:HintAssist.Foreground="Green"
                                materialDesign:HintAssist.Hint="{Binding [密码], Source={x:Static lang:LanguageManager.Instance}}"
                                materialDesign:TextFieldAssist.UnderlineBrush="Coral"
                                FontSize="20"
                                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal">
                                <Button
                                    Width="120"
                                    Height="40"
                                    Margin="30,30,0,30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Command="{Binding CmdValidateUser}"
                                    CommandParameter="{Binding ElementName=pswdbox}"
                                    IsDefault="True"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                    ToolTip="Resource name: MaterialDesignRaisedAccentButton">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="40"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Kind="SignIn" />
                                        <TextBlock Text="{Binding [登录], Source={x:Static lang:LanguageManager.Instance}}" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    Width="120"
                                    Height="40"
                                    Margin="40,30,0,30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="MistyRose"
                                    Click="BtnCancel_Click"
                                    Foreground="SeaGreen"
                                    IsCancel="True"
                                    ToolTip="Resource name: MaterialDesignRaisedAccentButton">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="40"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Kind="UserCancel" />
                                        <TextBlock Text="{Binding [取消], Source={x:Static lang:LanguageManager.Instance}}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>