<UserControl
    x:Class="VisDummy.VMs.Views.ManulVisCalibrationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:VMControls.WPF.Release;assembly=VMControls.WPF.Release"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources />

        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="2,0,2,0">
            <Grid.Resources>
                <Style BasedOn="{StaticResource MaterialDesignLabel}" TargetType="Label">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Margin" Value="2,0,20,0" />
                </Style>
                <Style BasedOn="{StaticResource MaterialDesignOutlinedButton}" TargetType="Button">
                    <Setter Property="Margin" Value="2,0,2,0" />
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="{Binding [流程], Source={x:Static lang:LanguageManager.Instance}}" />
            <ComboBox
                x:Name="cboxProcedures"
                Grid.Column="1"
                MinWidth="100"
                DisplayMemberPath="Name"
                ToolTip="{Binding [选择流程], Source={x:Static lang:LanguageManager.Instance}}" />

            <Grid
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.Resources>
                        <Style TargetType="md:PackIcon">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="Blue" />
                        </Style>

                        <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="TextBox">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Margin" Value="2,0,20,0" />
                            <Setter Property="MinWidth" Value="85" />
                        </Style>

                        <Style BasedOn="{StaticResource MaterialDesignToolButton}" TargetType="Button" />

                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="{Binding [说明], Source={x:Static lang:LanguageManager.Instance}}"
                        FontWeight="Bold" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="X"
                        FontWeight="Bold" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Y"
                        FontWeight="Bold" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="3"
                        Content="Angle"
                        FontWeight="Bold" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="4"
                        Content="{Binding [操作], Source={x:Static lang:LanguageManager.Instance}}"
                        FontWeight="Bold" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="{Binding [步长], Source={x:Static lang:LanguageManager.Instance}}" />
                    <TextBox
                        x:Name="stepX"
                        Grid.Row="1"
                        Grid.Column="1"
                        PreviewTextInput="wldCoord_PreviewTextInput"
                        Text="50.00" />
                    <TextBox
                        x:Name="stepY"
                        Grid.Row="1"
                        Grid.Column="2"
                        PreviewTextInput="wldCoord_PreviewTextInput"
                        Text="50.00" />
                    <TextBox
                        x:Name="stepAngle"
                        Grid.Row="1"
                        Grid.Column="3"
                        PreviewTextInput="wldCoord_PreviewTextInput"
                        Text="5.00" />


                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Nth" />
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="wldX"
                            PreviewTextInput="wldCoord_PreviewTextInput"
                            Text="0.00" />
                        <Button Name="addStepX">
                            <md:PackIcon Kind="Plus" />
                        </Button>
                        <Button Name="minusStepX">
                            <md:PackIcon Kind="Minus" />
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="2"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="wldY"
                            PreviewTextInput="wldCoord_PreviewTextInput"
                            Text="0.00" />
                        <Button Name="addStepY">
                            <md:PackIcon Kind="Plus" />
                        </Button>
                        <Button Name="minusStepY">
                            <md:PackIcon Kind="Minus" />
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="3"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="wldAngle"
                            PreviewTextInput="wldCoord_PreviewTextInput"
                            Text="0.00" />
                        <Button Name="addStepA">
                            <md:PackIcon Kind="Plus" />
                        </Button>
                        <Button Name="minusStepA">
                            <md:PackIcon Kind="Minus" />
                        </Button>
                    </StackPanel>
                </Grid>


                <Grid Grid.Column="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="{Binding [九点标定], Source={x:Static lang:LanguageManager.Instance}}" />
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Button Name="calibT1" Content="1#">
                            <Button.CommandParameter>
                                <sys:Int32>1</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT2" Content="2#">
                            <Button.CommandParameter>
                                <sys:Int32>2</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT3" Content="3#">
                            <Button.CommandParameter>
                                <sys:Int32>3</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT4" Content="4#">
                            <Button.CommandParameter>
                                <sys:Int32>4</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT5" Content="5#">
                            <Button.CommandParameter>
                                <sys:Int32>5</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT6" Content="6#">
                            <Button.CommandParameter>
                                <sys:Int32>6</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT7" Content="7#">
                            <Button.CommandParameter>
                                <sys:Int32>7</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT8" Content="8#">
                            <Button.CommandParameter>
                                <sys:Int32>8</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibT9" Content="9#">
                            <Button.CommandParameter>
                                <sys:Int32>9</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="{Binding [旋转中心], Source={x:Static lang:LanguageManager.Instance}}" />
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Button Name="calibR10" Content="10#">
                            <Button.CommandParameter>
                                <sys:Int32>10</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibR11" Content="11#">
                            <Button.CommandParameter>
                                <sys:Int32>11</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibR12" Content="12#">
                            <Button.CommandParameter>
                                <sys:Int32>12</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibR13" Content="13#">
                            <Button.CommandParameter>
                                <sys:Int32>13</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Name="calibR14" Content="14#">
                            <Button.CommandParameter>
                                <sys:Int32>14</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>



        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <vm:VmRenderControl
                Name="vmRenderCtrl"
                Grid.Column="1"
                Margin="2" />

            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="2,2,2,2"
                BorderBrush="LightGray"
                BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid
                        Name="records"
                        Grid.Row="0"
                        CanUserAddRows="False"
                        CanUserDeleteRows="True"
                        CanUserSortColumns="False"
                        IsReadOnly="True" />

                    <StackPanel
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        Background="LightGray"
                        Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignOutlinedButton}" TargetType="Button">
                                <Setter Property="Margin" Value="2,2,4,2" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                            <Style BasedOn="{StaticResource MaterialDesignLabel}" TargetType="Label">
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </StackPanel.Resources>

                        <Label Content="{Binding [禁止编辑], Source={x:Static lang:LanguageManager.Instance}}" />
                        <ToggleButton
                            x:Name="btnToggleEdit"
                            Margin="2,0,20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" />


                        <Button
                            x:Name="btnClearRecords"
                            Width="120"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="Red">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon
                                    Margin="4,0,4,0"
                                    VerticalAlignment="Center"
                                    Kind="Clear" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding [清屏], Source={x:Static lang:LanguageManager.Instance}}" />
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>



        <!--  结果展示  -->
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Margin="2"
            Background="AliceBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</UserControl>
