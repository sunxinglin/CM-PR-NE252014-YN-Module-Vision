<UserControl x:Class="VisDummy.WPF.Views.Monitor.人工位MonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:VisDummy.WPF.Common"
             xmlns:ctrl="clr-namespace:VisDummy.WPF.Views.Monitor.CommonCtrl"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
             xmlns:local="clr-namespace:VisDummy.WPF.Views.Monitor"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="1080"
             d:DesignWidth="1920"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>

            <GroupBox md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom"
                      Header="通用状态">
                <ctrl:HeartCtrl x:Name="heart" />
            </GroupBox>

            <GroupBox md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom"
                      Header="水冷板检测">
                <ctrl:人工位水冷板检测Ctrl x:Name="水冷板检测" />
            </GroupBox>


        </StackPanel>
    </ScrollViewer>
</UserControl>
