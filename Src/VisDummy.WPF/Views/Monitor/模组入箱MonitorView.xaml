<UserControl
    x:Class="VisDummy.WPF.Views.Monitor.模组入箱MonitorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:VisDummy.WPF.Common"
    xmlns:ctrl="clr-namespace:VisDummy.WPF.Views.Monitor.CommonCtrl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:local="clr-namespace:VisDummy.WPF.Views.Monitor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Background="White"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox
                Grid.Row="0"
                md:ColorZoneAssist.Background="Black"
                md:ColorZoneAssist.Foreground="White"
                md:ColorZoneAssist.Mode="Custom">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="White" Text="{Binding [通用状态], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </GroupBox.Header>

                <ctrl:HeartCtrl x:Name="heart" />
            </GroupBox>

            <GroupBox
                Grid.Row="1"
                md:ColorZoneAssist.Background="Black"
                md:ColorZoneAssist.Foreground="White"
                md:ColorZoneAssist.Mode="Custom">

                <ctrl:模组入箱Station2DCtrl x:Name="station2d1" />
            </GroupBox>

            <GroupBox
                Grid.Row="2"
                md:ColorZoneAssist.Background="Black"
                md:ColorZoneAssist.Foreground="White"
                md:ColorZoneAssist.Mode="Custom">

                <ctrl:模组入箱Station2DSpotCtrl x:Name="station2dspot" />
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
