<UserControl x:Class="VisDummy.WPF.Views.Monitor.LoadingMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:VisDummy.WPF.Common"
             xmlns:ctrl="clr-namespace:VisDummy.WPF.Views.Monitor.CommonCtrl"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
             xmlns:local="clr-namespace:VisDummy.WPF.Views.Monitor"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="1080"
             d:DesignWidth="1920"
             Background="White"
             mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0"
                      md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="White" Text="{Binding [通用状态], Source={x:Static lang:LanguageManager.Instance}}" />
                    </StackPanel>
                </GroupBox.Header>

                <ctrl:HeartCtrl x:Name="heart" />
            </GroupBox>

            <GroupBox Grid.Row="1"
                      md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom"
                      Header="3D定位引导">

                <ctrl:LoadingStation3DCtrl x:Name="station3d" />
            </GroupBox>

            <GroupBox Grid.Row="2"
                      md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom"
                      Header="3D标定">

                <ctrl:LoadingStation3DSpotCtrl x:Name="station3dspot" />
            </GroupBox>

            <GroupBox Grid.Row="3"
                      md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom"
                      Header="2D拍照">

                <ctrl:LoadingStation2DCtrl x:Name="station2d" />
            </GroupBox>

            <GroupBox Grid.Row="4"
                      md:ColorZoneAssist.Background="Black"
                      md:ColorZoneAssist.Foreground="White"
                      md:ColorZoneAssist.Mode="Custom"
                      Header="2D校准">

                <ctrl:LoadingStation2DSpotCtrl x:Name="station2dspot" />
            </GroupBox>

        </Grid>
    </ScrollViewer>
</UserControl>
