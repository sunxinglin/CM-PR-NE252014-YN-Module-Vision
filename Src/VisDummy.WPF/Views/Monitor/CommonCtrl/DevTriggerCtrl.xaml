<UserControl
    x:Class="VisDummy.WPF.Views.Monitor.CommonCtrl.DevTriggerCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:VisDummy.WPF.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:VisDummy.Lang;assembly=VisDummy.Lang"
    xmlns:local="clr-namespace:VisDummy.WPF.Views.Monitor.CommonCtrl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Name="ele"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="40" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontFamily" Value="NSimSun" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontFamily" Value="NSimSun" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontFamily" Value="NSimSun" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <StackPanel Height="40" Orientation="Horizontal">
        <common:LedSwitchCtrl
            IsChecked="{Binding DevMsg.Trigger, ElementName=ele}"
            OffColor="Gray"
            OnColor="Orange"
            Tip="{Binding [视觉工作拍照请求], Source={x:Static lang:LanguageManager.Instance}}" />
        <Label Content="{Binding [功能号], Source={x:Static lang:LanguageManager.Instance}}" />
        <TextBlock Text="{Binding DevMsg.Function, ElementName=ele}" />
        <Label Content="{Binding [拍照位置], Source={x:Static lang:LanguageManager.Instance}}" />
        <TextBlock Text="{Binding DevMsg.Position, ElementName=ele}" />
        <Label Content="{Binding [批次], Source={x:Static lang:LanguageManager.Instance}}" />
        <TextBlock Text="{Binding DevMsg.Batch, ElementName=ele}" />
        <Label Content="{Binding [模组类型], Source={x:Static lang:LanguageManager.Instance}}" />
        <TextBlock Text="{Binding DevMsg.ModuleType, ElementName=ele}" />
    </StackPanel>
</UserControl>
